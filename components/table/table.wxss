/* components/table.wxss */
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result .weui-cell__bd{
  padding: 2px 0 2px 20px;
  color: #666;
}
.searchbar-result:before{
    display: none;
}

.table {
  border: 0px solid darkgray;
  width: 98%;
  margin-left: 1%;
}
.table-wrap{
  height: 900rpx;
  overflow-y: scroll;
  overflow-x: hidden;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  min-height: 3rem;
  padding: 0;
  margin: 0;
}
.th { 
  margin: 0;
  padding: 0;
  align-items: center;
  text-align: left;  
  background: #3366FF;
  color: #fff;
  display: flex;
}
.thName{
  padding-left: 10rpx;
  width: 40%;
}
.thScore{
  width: 20%;
}
.thDurTime{
  width: 20%;
}
.thDifficulty{
  width: 20%;
}
.td {
  margin: 0;
  padding: 0;  
  text-align: left;
  display: flex;
  align-items: center;
}
.nameCol{
  width: 40%;
  padding-left: 10rpx;
}
.scoreCol{
  width: 20%;
  flex-grow: 1;
}
.durTimeCol{
  width: 20%;
  flex-grow: 1;
}
.difficultyCol{
  width: 20%;
  flex-grow: 1;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.img {
  width: 1.5rem;
  height: 1.5rem;
  margin-right:0.6rem;
}
.navigator-hover{
  color: red;
  width:100%;
}

.backCol:hover {
  color: red;
}

.weui-search-bar{position:relative;padding:8px;display:-webkit-box;display:-webkit-flex;display:flex;box-sizing:border-box;background-color:#ededed;-webkit-text-size-adjust:100%;-webkit-box-align:center;-webkit-align-items:center;align-items:center}.weui-icon-search{margin-right:8px;font-size:14px;vertical-align:top;margin-top:.64em;height:1em;line-height:1em}
.weui-icon-search_in-box{position:absolute;left:12px;top:50%;margin-top:-8px}
.weui-search-bar__text{display:inline-block;font-size:14px;vertical-align:top}
.weui-search-bar__form{position:relative;-webkit-box-flex:1;-webkit-flex:auto;flex:auto;border-radius:4px;background:#fff}
.weui-search-bar__box{position:relative;padding-left:32px;padding-right:32px;width:100%;box-sizing:border-box;z-index:1}
.weui-search-bar__input{height:32px;line-height:32px;font-size:14px;caret-color:#07c160}
.weui-icon-clear{position:absolute;top:0;right:0;bottom:0;padding:10px 12px;font-size:0}
.weui-icon-clear:after{content:"";height:100%;vertical-align:middle;display:inline-block;width:0;overflow:hidden}
.weui-search-bar__label{position:absolute;top:0;right:0;bottom:0;left:0;z-index:2;border-radius:4px;text-align:center;color:rgba(0,0,0,.5);background:#fff;line-height:32px}
.weui-search-bar__cancel-btn{margin-left:8px;line-height:32px;color:#576b95;white-space:nowrap}